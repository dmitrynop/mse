#!/bin/bash

set -e

source ./bin/utils/set-env

TAG=$MSE_VERSION

if [ "$TAG" == "" ]; then
  echo "No tag given"
  exit
fi

mix docker.build
mix docker.release
mix docker.publish --tag $TAG

git tag $TAG
git push --tags &

eval $(docker-machine env docker-test)
docker-compose build
docker-compose stop web
docker-compose up -d
